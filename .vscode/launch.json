{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: Launch interport (Hot Reload)",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/interport/interport.csproj",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}
