@using Microsoft.AspNetCore.Identity
@using interport.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="navbar-text me-3">Hello, @User.Identity?.Name</span>
    </li>
    <li class="nav-item">
        <form class="d-inline" method="post" asp-area="Identity" asp-page="/Account/Logout">
            <button type="submit" class="btn btn-link nav-link p-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
