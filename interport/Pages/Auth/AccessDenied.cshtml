@page "/denied"
@model interport.Web.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="bi bi-shield-lock display-4 text-danger mb-3"></i>
                    <h1 class="h3 fw-bold mb-3 text-danger">Access Denied</h1>
                    <p class="text-muted mb-4">
                        You do not have permission to view this page.  
                        Please contact an administrator if you believe this is an error.
                    </p>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house-door me-1"></i> Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
